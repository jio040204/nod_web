<body>
    <h1>업데이트 폼</h1>
    <form action="/update/<%=student[0].s_grade%>" method="post">
        <table>
            <tr>
                <th>학번</th>
                <th>이름</th>
                <th>전화번호</th>
                <th>비밀번호</th>
            </tr>
           <!-- <script student.forEach(function (value) { ></script>-->
